{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug React App",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/client/src",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            }
        },
        {
            "name": "Debug Python Backend",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": ["app.main:app", "--reload"],
            "cwd": "${workspaceFolder}/backend_python_service",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend_python_service"
            }
        },
        {
            "name": "Debug .NET Backend",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/backend_netCore_service/AuthApi/bin/Debug/net9.0/AuthApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/backend_netCore_service/AuthApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        }
    ]
}